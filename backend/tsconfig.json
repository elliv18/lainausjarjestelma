{
    "compilerOptions": {
        "outDir": "build",
        "rootDir": "./",
        "module": "commonjs",
        "target": "es2017",
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "allowJs": false,
        "esModuleInterop": true,
        "lib": [
            "dom",
            "es2017",
            "esnext"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "**/*.spec.tsx",
        "**/*.css"
    ]
}
