type User {
  id: ID! @id
  userType: String!
  email: String! @unique
  password: String!
  firstName: String
  lastName: String
  address: String
  opNro: String
  puh: String
}

type Device {
  id: ID! @id
  idCode: String
  model: String
  info: String
  devCat: DevCategory! @relation(link: INLINE)
}

type DevCategory {
  id: ID! @id
  devType: String
  manufacture: String
  device: Device!
  vastuuHnkl: User! @relation(link: INLINE)
}

type loan {
  id: ID! @id
  loanDate: String!
  returnDate: String
  dueDate: String!
  Loaner: User! @relation(link: INLINE)
  loanGiver: User! @relation(link: INLINE)
  loanReturner: User
  devID: Device! @relation(link: INLINE)
}
