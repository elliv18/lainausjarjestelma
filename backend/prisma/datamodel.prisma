enum UserType {
  ADMIN
  STAFF
  STUDENT
}

type User {
  id: ID! @id
  isActive: Boolean! @default(value: true)
  userType: UserType!
  email: String! @unique
  password: String!
  firstName: String
  lastName: String
  address: String
  personNumber: String
  phone: String
  loans: [Loan]! @relation(name: "LoanerId")
  suppliers: [Loan]! @relation(name: "SupplierId")
  returns: [Loan]! @relation(name: "ReturnId")
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type Device {
  id: ID! @id
  idCode: String! @unique
  manufacture: String
  model: String
  info: String
  loanStatus: Boolean! @default(value: false)
  devCategoryId: DevCategory! @relation(name: "DevCat")
  loan: Loan @relation(name: "DevLoan")
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type DevCategory {
  id: ID! @id
  deviceType: String @unique
  desription: String
  devices: [Device]! @relation(name: "DevCat")
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type Loan {
  id: ID! @id
  isActive: Boolean @default(value: true)
  loanDate: DateTime!
  returnDate: DateTime
  dueDate: DateTime!
  deviceId: Device! @relation(link: INLINE, name: "DevLoan")
  loanerId: User! @relation(name: "LoanerId")
  supplierId: User! @relation(name: "SupplierId")
  returnerId: User @relation(name: "ReturnId")
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}
