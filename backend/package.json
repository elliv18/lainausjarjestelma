{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev": "yarn build && concurrently -n prisma,prettier,serve \"yarn dev-prisma\" \"yarn dev-prettier\" \"yarn dev-serve\"",
    "dev-prisma": "nodemon -w datamodel.prisma --exec 'yarn prisma generate && PRISMA_ENDPOINT=http://prisma:3060 yarn prisma deploy --force'",
    "dev-prettier": "onchange 'src/**/*.{ts,tsx}' -- prettier --write {{changed}}",
    "dev-serve": "sleep 5 && tsc-watch -w --noClear --onSuccess 'node --max-old-space-size=2048 build/src/index.js'",
    "build": "rm -rf build && mkdir build && yarn prisma delete -f && yarn prisma generate && tsc",
    "start": "yarn prisma deploy && node build/src/index.js",
    "lint": "yarn lint-prettier && yarn lint-ts",
    "lint-ts": "tslint -p tsconfig.json -t stylish -e '**/*.spec.{ts,tsx}' 'src/**/*.{ts,tsx}'",
    "lint-prettier": "prettier --check 'src/**/*.{ts,tsx}'",
    "prisma:force-deploy": "yarn prisma deploy --force"
  },
  "dependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/jsonwebtoken": "^8.3.2",
    "apollo-server": "^2.5.0",
    "bcrypt": "^3.0.6",
    "bcryptjs": "^2.4.3",
    "concurrently": "^4.1.0",
    "graphql": "^14.3.0",
    "graphql-shield": "^5.3.5",
    "graphql-yoga": "^1.17.4",
    "jsonwebtoken": "^8.5.1",
    "nexus": "^0.11.7",
    "nexus-prisma": "^0.3.7",
    "nodemon": "^1.19.0",
    "npx": "^10.2.0",
    "prisma": "^1.32.2",
    "prisma-client-lib": "^1.30.4",
    "tsc-watch": "^2.1.2"
  },
  "devDependencies": {
    "onchange": "^5.2.0",
    "prettier": "^1.17.0",
    "tslint": "^5.16.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.4.5"
  }
}
