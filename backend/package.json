    "bcrypt": "^3.0.6",
    "graphql": "^14.3.0",
    "graphql-shield": "^5.3.5",
    "graphql-yoga": "^1.17.4",
    "jsonwebtoken": "^8.5.1",
    "nexus": "^0.11.7",
    "nexus-prisma": "^0.3.7",
    "nodemon": "^1.19.0",
    "npx": "^10.2.0",
    "prisma": "^1.32.2",
    "prisma-client-lib": "^1.30.4",
    "typescript": "^3.4.5"
  }
}
